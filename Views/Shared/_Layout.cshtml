<!-- AI tarafından yapıldı - Modern animasyonlu navbar ve hero section -->
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeyitnameWebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/portfolio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeyitnameWebSite.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/img/Orjinal.jpg" type="image/x-icon">
</head>
<body>
    <header>
        <!-- AI tarafından yapıldı - Modern navbar -->
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold" href="/" style="font-size: 1.5rem; letter-spacing: 2px;">
                    <span class="gradient-text">Seyit</span>name
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto gap-3">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Baglanti" asp-action="Index">Portföy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="CallUs" asp-action="Index">İletişim</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-link-custom" href="#" role="button" data-bs-toggle="dropdown">
                                Bilgi
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="Informations" asp-action="Anlami">Anlamı</a></li>
                                <li><a class="dropdown-item" asp-controller="Informations" asp-action="Kimdir">Kimdir</a></li>
                                <li><a class="dropdown-item" asp-controller="Informations" asp-action="Tarihi">Tarihi</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Informations" asp-action="Ozellikleri">Özellikleri</a></li>
                            </ul>
                        </li>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-controller="Profile" asp-action="Index">Hoşgeldin, @User.Identity.Name!</a>
                            </li>
                            @await Html.PartialAsync("_AdminNavLink")
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Çıkış</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Account" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary text-white" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- AI tarafından yapıldı - Modern footer -->
    <footer class="footer-custom mt-5 pt-5 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="gradient-text mb-3">Seyitname</h5>
                    <p class="text-muted">Kişisel portföy sayfası. İletişim için formu kullanabilirsiniz.</p>
                </div>
                <div class="col-md-3">
                    <h5 class="text-light mb-3">Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none hover-link">Portföy</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-link">İletişim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-link">Hakkımda</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="text-light mb-3">Hukuk</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Legal" asp-action="PrivacyPolicy" class="text-muted text-decoration-none hover-link">Gizlilik Politikası</a></li>
                        <li><a asp-controller="Legal" asp-action="TermsOfService" class="text-muted text-decoration-none hover-link">Hüküm ve Koşullar</a></li>
                    </ul>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted small">
                &copy; 2025 Seyitname - Tüm Hakları Saklıdır
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>