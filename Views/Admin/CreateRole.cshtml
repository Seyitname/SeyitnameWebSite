@{
    ViewData["Title"] = "Yeni Rol Oluştur - Admin";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-custom p-4">
                <h3>Yeni Rol Oluştur</h3>

                <form asp-action="CreateRole" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Rol Adı</label>
                        <input type="text" name="roleName" class="form-control-custom" required />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                        <a href="@Url.Action("Roles", "Admin")" class="btn btn-secondary">İptal</a>
                    </div>
                </form>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger mt-3">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>