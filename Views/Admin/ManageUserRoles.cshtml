@model SeyitnameWebSite.Controllers.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Kullanıcı Rolleri - Admin";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-custom p-4">
                <h3>Kullanıcı Rolleri: @Model.UserName</h3>

                <form asp-action="UpdateUserRoles" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="mb-3">
                        @foreach (var r in Model.Roles)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Roles[@Model.Roles.IndexOf(r)].Selected" value="true" @(r.Selected ? "checked" : "") />
                                <input type="hidden" name="Roles[@Model.Roles.IndexOf(r)].RoleName" value="@r.RoleName" />
                                <label class="form-check-label text-light">@r.RoleName</label>
                            </div>
                        }
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">Kullanıcı Listesine Dön</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>